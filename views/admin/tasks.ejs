<% include ../partials/headerUser %>


<div align='center'>
<% include ../modals/modalNewTask %>
</div>

<div class='new' align='center'>
    <input class="search" id="myInput" placeholder="Search for a Task" autofocus>
</div>

<div class='row' style='padding: 2%;'>
    <div class='col-xs-12' align='center'>
        <div class="container bootstrap snippet">
            <div class="row">
                <div class="col-lg-12">
                    <div class="main-box no-header clearfix">
                        <div class="main-box-body clearfix">
                            <div class="table-responsive">

                                <!-- Insert any table of this format -->
                                <table id="myTable" class="table group-list">
                                    <thead >
                                        <tr>
                                        <th style='text-align: left; padding-left: 20px;'><span>Tasks </span>(<a href="#new-task" data-toggle="modal" data-target='#new-task'>Create New</a>)</th>
                                        <th><span>Created</span></th>
                                        <th><span>Last Edited</span></th>
                                        <th>Users</th>
                                        <th>Buttons</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        <div class='row'>
                                            <div class='col-xs-12'>

                                                <% tasks.reverse().forEach(function(task){ %>
                                                    <% var d = new Date(task['dateCreated']); %>
                                                    <% var d_edit = new Date(task['dateEdited']); %>

                                                    <tr id='<%=task._id%>'>
                                                        <td id='<%=task.title%>' value='<%=task._id%>' style='padding-left: 20px; padding-right: 20px;'>
                                                            <a href='#' class='expandable' id='<%=task._id%>'><%= task.title.slice(0,45) %></a>
                                                        </td>

                                                        <td>
                                                            <div class='comment'>
                                                            <span class='timestring text-muted '><%= d.toISOString() %></span>
                                                            </div>
                                                        </td>

                                                        <td>
                                                            <div class='comment'>
                                                            <span class='timestring text-muted '><%= d_edit.toISOString() %></span>
                                                            </div>
                                                        </td>

                                                        <td class="text-center">
                                                            <button class="label label-info" style='background-color:#0a6884'><%=task.users.length%> users</button>
                                                        </td>

                                                        <td class='buttons' style="width: 20%;">
                                                            <a href='#task-content<%=task['_id']%>' data-toggle="modal" data-target="#task-content<%=task['_id']%>" class='btn btn-sm glyphicon glyphicon-edit'></a>

                                                            <a href='#task-users<%=task._id%>' data-toggle="modal" data-target="#task-users<%=task._id%>" class='btn btn-sm glyphicon glyphicon-user'></a>
                                                            <% include ../modals/modalManageUsersTask %>

                                                            <a href='#task-delete<%=task['_id']%>' data-toggle="modal" data-target="#task-delete<%=task['_id']%>" class='btn btn-sm glyphicon glyphicon-trash'></a>
                                                            <% include ../modals/modalDeleteTask %>
                                                        </td>

                                                    </tr>

                                                <% });%>
                                            </div>
                                        </div>

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<script>

// For search bar
// (Each one needs a slightly different script due to how the table is formatted)
$('#myInput').keyup(function () {
  var input, filter, table, tr, td, i, keep;
  input = $("#myInput")[0];
  filter = input.value.toUpperCase();
  table = $("#myTable");
  tbody = table[0].getElementsByTagName("tbody");
  trs = tbody[0].getElementsByTagName("tr");


  for (i = 0; i < trs.length; i++) {
    tds = trs[i].getElementsByTagName("td");
    for (j = 0; j < tds.length; j++) {
        console.log(tds[j].id)
        // Loop all tds as will use name, group name etc all of them to search
      if (tds[j].id.toUpperCase().indexOf(filter) > -1) {
          trs[i].style.display = "";
          break;
      }

      else { trs[i].style.display = "none"; }
    }
  }
});
</script>


<script>

// For Expanding a task's user list to choose whose work to look at
$('a.expandable').click(function (e) {
    console.log($('#expansion-'+e.target.id)[0].style);
});
</script>


