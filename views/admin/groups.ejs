<% include ../partials/headerUser %>

<div class='row' style='padding: 2%; margin-top:-5%;'>
    <div class='col-xs-12' align='center'>
        <% include ../buttons/upperAdminButtons %>
    </div>
</div>

<div class='row' style='margin-bottom:4%;'>
    <div class='col-lg-2'>
        <% var mode='groups'; %>
        <% include ../buttons/dashboardByUsersOrGroups %>
    </div>
    <div class='col-lg-4 col-lg-offset-2'>
        <% include ../partials/jumbotronAdminDashboard %>
    </div>
</div>

<div class='row'>
    <div class='col-xs-12' style='max-height:65%; overflow:auto;'>
        <% groups.forEach(function(group){ %>
            <% if (group.users.length > 0){ %>
                <div class='row'>
                    <div class='col-md-3'>
                        <% include ../repeats/groupOperations %>
                    </div>
                </div>
                <div class='row'>
                    <div class='col-xs-12'>
                        <% group.users.forEach(function(thisUser){ %>
                            <% include ../repeats/userBoxAdminPov %>
                        <% }); %>
                    </div>
                </div>
            <% } %>
        <% }); %>
    </div>
</div> 

<script>
      $('#dashboard').css("background-color", "#FFFFFF");
      $('#dashboardtxt').css("color", "#0084b4");                 
</script>