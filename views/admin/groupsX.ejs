<% include ../partials/headerUser %>

<div class='new' align='center'>
    <input class="search" id="myInput" placeholder="Search for a Group">
    <button class="sort-choosable"><a class='blend' href ="/index/<%=user.username%>">By name</a></button>
    <button class="sort-chosen">By Group</button>
</div>

<div class='row' style='padding: 2%;'>
    <div class='col-xs-12' align='center'>
        <div class="container bootstrap snippet">
            <div class="row">
                <div class="col-lg-12">
                    <div class="main-box no-header clearfix">
                        <div class="main-box-body clearfix">
                            <div class="table-responsive">

                                <!-- Insert any table of this format -->
                                <table id="myTable" class="table user-list">
                                    <thead >
                                        <tr>
                                        <th><span>Groups</span></th>
                                        <th><span>Last Meeting</span></th>
                                        <th><span>Next Meeting</span></th>
                                        <th class="text-center"><span>Status (etc)</span></th>
                                        <th><span>Email</span></th>
                                        <th>&nbsp;</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        <div class='row'>
                                            <div class='col-xs-12'>

                                                <% d = new Date(Date.now()) %>
                                                <% groups.forEach(function(group){ %>
                                                    <tr>
                                                        <td id='<%=group.name%>'>
                                                            <span class="user-subhead"><%= group.name %></span>
                                                            <a href="#" class="user-link">Expand (<%= group.users.length %>) member records</a>
                                                        </td>
                                                        <td id='<%=group.name%>'>
                                                            <div class='comment'>
                                                            <span class='timestring text-muted '><%= d.toISOString() %></span>
                                                            </div>
                                                        </td>
                                                        <td id='<%=group.name%>'>
                                                            <div class='comment'>
                                                            <span class='timestring text-muted '><%= d.toISOString() %></span>
                                                            </div>
                                                        </td>
                                                        <td id='<%=group.name%>' class="text-center">
                                                            <span class="label label-default">pending</span>
                                                            <!--  TODO:Can use label-success for green, label-danger etc etc -->
                                                            <!--  Perhaps cool to use with the deadline/pace tracking system -->
                                                        </td>
                                                        <td id='<%=group.name%>'>
                                                            <a href="#">marlon@brando.com</a>
                                                        </td>
                                                        <td id='<%=group.name%>' style="width: 20%;">

                                                            <a href='/index/<%=user.username%>/groups/<%=group._id%>/messages' class=' btn btn-sm btn-primary glyphicon glyphicon-comment'></span></a>
                                                            <a href="add-#<%=group._id%>" data-toggle="modal" data-target='#add-<%=group._id%>' class=' btn btn-sm btn-success glyphicon glyphicon-plus'></span></a>
                                                            <% include ../modals/modalAddUsersToGroup %>
                                                            <a href='#delete-<%=group._id%>' data-toggle="modal" data-target="#delete-<%=group._id%>" class=' btn btn-sm btn-danger glyphicon glyphicon-trash'></span></a>
                                                            <% include ../modals/modalDeleteGroup %>

                                                        </td>
                                                    </tr>

                                                <% });%>
                                            </div>
                                        </div>

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>


