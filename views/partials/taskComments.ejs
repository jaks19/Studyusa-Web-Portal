<div class="twt-wrapper">
    <div class="panel panel-info" style='height:80%;'>

            <div class="list-group-item" align='center'>
                <strong>Comments</strong>
            </div>

             <div class="panel-body">
                <form action='/index/<%=user.username%>/tasks/<%=task._id%>/comments' id = 'commentForm' method = 'POST'>
                    <textarea class="form-control" placeholder="Enter comment here..." rows="3" name ='textareacontent' style='margin-bottom:1%;'></textarea>
                    <button type='submit' class="btn btn-info btn-xs pull-right" name = 'butt'>Post</button>
                    <div class="clearfix"></div>
                </form>
                <hr />


                <div style='max-height:70%; overflow:auto;'>
                        <% if (task.comments.length > 0) { %>
                            <% task.comments.reverse().forEach(function(comment){ %>
                                <% include ../modals/modalTaskCommentButtonGroup %>

                                <div class="media" style='margin-bottom: 5%;'>

                                    <div class="square" style='margin-left:4%; height:10%; width: 10%; float: left;'>
                                        <img src="/images/funny-profile-pictures.jpg" style='max-width: 100%; max-height: 100%; border-radius:5%;' />
                                    </div>

                                    <div class="comment media-body" style='float: left; max-width:80%; margin-left: 5%;'>
                                            <strong class="text-success"> <%=comment.author.username %> </strong>
                                            <p> <%= comment['content'] %> </p>
                                            <% var d = new Date(comment['date']); %>
                                            <span class='timestring text-muted'><%= d.toISOString(); %></span>
                                    </div>

                                </div>

                                <% include ../modals/modalTaskEditCommentText %>
                            <% }); %>
                        <% } %>
            </div>

        </div>
    </div>
</div>
