    opacity: 1.0;
}

.textual-empty {
    display: none;
    font-size: 14px;
    padding-top: 35%;
    text-align: center;

    opacity: 1.0;
}

#overlayTextLocked {
    color: #d8d8d8;
    /* Background color decided by tingle-btn--danger */
}

