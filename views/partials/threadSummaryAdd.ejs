<div align='center'>
    <div class='container' style='background:#0084b4; border-radius: 25px; color: white; width: 100%; margin-bottom:2%;'>
        <h5 style=''> Thread Info </h5>
    </div>
    <div class='container' style='background:#FFFFFF; width: 100%; border-bottom: solid 1px #E0F0F7;'>
        <h5> Name: <%=sub['title']%></h5>
    </div>

    <div class='container' style='background:#FFFFFF; width: 100%; border-bottom: solid 1px #E0F0F7;'>
        <% var d = new Date(sub['date']); %>
        <h5> Date: <%= d.getMonth() %>/<%= d.getDate() %>/<%= d.getFullYear() %> </h5>
    </div>

    <div class='container' style='background:#0084b4; border-radius: 25px; margin-top:25%; color: white; width: 100%; margin-bottom:4%;'>
        <h5> Upload an Updated Document </h5>
    </div>

    <div class='container' style='width: 100%; border-bottom: solid 1px #E0F0F7;'>
        <form id='submitAdd' action='/index/<%=client.username%>/submit/<%=sub['_id']%>/adds' method='POST' enctype='multipart/form-data'>
            <input type="file" class="form-control" name='doc' id='doc' style='width:80%;' required> <br />
            <button id='sendAdd' type="submit" class="btn btn-xs btn-info">Upload</button>
        </form>
    </div>
</div>

<% include ../modals/modalPleaseWait %>

<script type="text/javascript" src="/scripts/amazonS3/upload.js"></script>
