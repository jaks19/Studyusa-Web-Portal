<% include ./partials/headerUser %>

    <div class='row'>
        <div class='col-xs-12 col-md-8 col-md-offset-2'>
            <ul class="list-group" style='height:100%; overflow:auto;'>

                <li class="list-group-item" align='center'>
                    <a href='#' id='new' data-toggle="modal" data-target="#newTask" class='pull-right btn-xs btn-warning'><span class='glyphicon glyphicon-plus'></span> New Task</a>
                    <h4 style='margin-top:5%;' class='info'>Tasks Created</h4>
                </li>








                <div class="modal fade bs-example-modal-lg" id="newTask" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                    <div class="modal-dialog modal-lg" role="document">
                        <div class="modal-content">

                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal"></button>
                                <h4 class="modal-title">Assign Tasks to 'gg'</h4>
                            </div>

                            <div class="modal-body">
                                <form action='/tasks/' method='POST' enctype='multipart/form-data'>
                                    <label for="title">Title</label>
                                    <input type="text" class="form-control" placeholder="Task Title" name='title' required style='margin-bottom:5%;'>
                                    <label for="prompt">Prompt</label>
                                    <textarea class="form-control" name='prompt' rows="5" placeholder="If necessary, add a prompt to guide the students." name='prompt' required style='margin-bottom:5%;'></textarea>
                                    <button type="submit" class="btn btn-primary" style='background:#6666F1;'>Submit</button><br>
                                </form>
                            </div>


                        </div>
                    </div>
                </div>



                <div id='tasks-list'>
                    <% tasks.reverse().forEach(function(task){ %>
                        <% var d = new Date(task['date']); %>
                            <div class='row'>

                                <div class ='col-xs-12'>
                                <a href='/tasks/<%=task._id%>/<%=user._id%>' style='z-index:1;' class="list-group-item" align='center'>
                                    <h4 style='margin-top: 7%;'><%= task['title']%></h4>
                                    <h6 style='text-align: justify;'><%= task['prompt']%></h6>
                                    <div class='comment'> <span class='timestring text-muted pull-left '>Created on <%= d.toDateString() %></span> </div>

                                    <a href='#task-content<%=task['_id']%>' data-toggle="modal" data-target="#task-content<%=task['_id']%>" class=' btn btn-sm btn-primary glyphicon glyphicon-edit'></span></a>
                                    <% include ./modals/modalEditTask %>

                                    <a href='#task-users<%=task._id%>' data-toggle="modal" data-target="#task-users<%=task._id%>" class=' btn btn-sm btn-success glyphicon glyphicon-user'></span></a>
                                    <% include ./modals/modalTaskUsers %>

                                    <a href='#task-delete<%=task['_id']%>' data-toggle="modal" data-target="#task-delete<%=task['_id']%>" class=' btn btn-sm btn-danger glyphicon glyphicon-trash'></span></a>
                                    <% include ./modals/modalDeleteTask %>
                                </a>
                                </div>

                                <div class ='col-md-3 col-xs-12' style='padding:2% 0% 0% 10%;'>

                                </div>

                            </div>
                    <% }); %>
                </div>

            </ul>
        </div>
    </div>
