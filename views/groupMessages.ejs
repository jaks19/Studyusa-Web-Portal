<% include ./partials/headerUser %>

<% include ./buttons/backToDashboard %>

<div class='col-md-2 col-md-offset-1 col-xs-12'>
    <ul class="list-group" style='max-height:70%; overflow:auto;'>
        <li class="list-group-item" align='center'><strong>People in Group (<%=group.users.length%>)</strong></li>
      <% group.users.forEach(function(_user){ %>
            <li class="list-group-item">
                <div class="media-body"  align='center'>
                    <img class="media-object" src="http://placehold.it/80"> <br>
                    <h4 class="media-heading"><%=_user.username.slice(0,1).toUpperCase() + _user.username.slice(1) %></h4>
                </div>
            </li>
      <% }); %>
    </ul>
</div>

<div class='row'>
    <div class="col-md-6 col-md-offset-1 col-xs-12">
        <div class="twt-wrapper">
            <div class="panel panel-info">
                <div class="list-group-item" align='center'><strong>Messages in this group</strong></div>
                <div class="panel-body">

                    <form action='/index/<%=user.username%>/groups/<%=group._id%>/messages' id='commentForm' method='POST'>
                        <textarea class="form-control" placeholder="Enter Message here..." rows="3" name ='textareacontent' style='margin-bottom:1%;'></textarea>
                        <button type='submit' class="btn btn-primary btn-sm pull-right" name = 'butt' style='background:#6666F1;'>Send</button>
                        <div class="clearfix"></div>
                    </form>
                    <hr>

                    <ul class="media-list" style='max-height:70%; overflow:auto;'>
                        <% if (group.messages.length == 0){ %>
                            <% include ./repeats/noMessageBlock %>
                        <% } else { %>
                            <% group.messages.reverse().forEach(function(message){ %>
                                <% include ./repeats/displayMessage %>
                            <% }); %>
                        <% } %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
$(document).ready(function(){
    // Navbar Init
    $('#messages').css("background-color", "#FFFFFF");
    $('#messagestxt').css("color", "#0084b4");
    $('#group').css("background-color", "#FFFFFF");
    $('#grouptxt').css("color", "#0084b4");
});
</script>
