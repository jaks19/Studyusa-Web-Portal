<% include ./partials/headerUser %>

<%if (user.admin){ %>
  <div class='row'>
    <div class='col-xs-12 col-md-4 col-md-offset-0'>        
        <nav aria-label="..." style='margin-top:-10%; margin-bottom:3%;'>
          <ul class="pager">
            <li class="previous"><a href="/index/<%=user.username%>"><span aria-hidden="true">&larr;</span> Administrator Control Panel </a></li>
          </ul>
        </nav>
    </div>
  </div>
<% } %>
    
<div class='row'>
<div class='col-xs-12 col-md-3'>
    <% include ./partials/profileCorner %>
</div>

