<% include ./partials/headerUser %>
<br /><br />
<h2 align='center'>Create Profile</h2><br>

<div class = 'row'>
  <div class = 'col-lg-4 col-md-4 col-md-offset-4 col-lg-offset-4'>
    
  
<form action = '/index' method = 'POST'>
  <div class="row">
    <div class="col-xs-12">
    <label for="title">Name</label>
    <input type="text" class="form-control" name = 'name' placeholder = 'Last Name - Other Name(s)' required> <br>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
    <label for="usr">Username</label>
    <input type="text" class="form-control" name = 'username' placeholder = 'Username' style='width:60%;' required> <br>
  </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
    <label for="amount">Password</label>
    <input type="password" class="form-control" placeholder = 'Password' name = 'password' style='width:60%;' required>
  </div>
  </div>
  <br><hr><br>
  <div class="row">
    <div class="col-xs-12">
    <label for="title">More Fields Coming Up...</label>
    <input type="text" class="form-control" placeholder = '...'> <br>
  </div>
  </div>
  <div class="row">
    <div class="col-xs-12" align='center'>
  <button type="submit" class="btn btn-primary" style='background:#5A28FF;'>Sign Up</button>
  </div>
  </div>
</form>

</div>
</div>